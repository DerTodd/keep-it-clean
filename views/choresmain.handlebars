<div class="row">
    <div class="col s12 m3 chore-list">
        <div style="border-radius: 25px;" class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title center-align" id="cardTitle">Chore List</span>
                {{#each choresData as |chore|}}
                <h5>{{chore.chore_name}}</h5>
                <p>{{chore.description}}</p>
                <p class="center-align" id="points">points: {{chore.value}}</p>
                <label></label>
                <select class="browser-default myDrop" id={{chore.id}}>
                    <option value="" disabled selected>Who Wants to Work?</option>
                    {{#each ../users as |user|}}
                    <option value="{{user.id}}">{{user.username}}</option>
                    {{/each}}
                </select>
                <p><input class="waves-effect waves-light btn choreBtn" id={{chore.button}} type="button" value="Assign"
                        onclick="GetSelectedTextValue()" /></p>
                {{/each}}
            </div>
        </div>
    </div>
    {{#each users as |user|}}
        <div style="background-color: #0F9FBF;" class="col s12 m3 center-align" id="maybeNames">  
            <div class="card" style="padding: 1em; border-radius: 25px; background-color: rgb(84,110,122)">          
            <h3>{{user.username}}</h3>
            <h6>Banked Points: {{user.points}}</h6>
            <div id="userCards">
            <ul>
                {{#each user.chores as |chore|}}
                <div style="height: fit-content;">
                <li class="card center-align listCard">{{chore.chore_name}}
                <div class="center-align form-group project-list">
                <button type="button" tPoints="{{user.points}} "points="{{chore.value}}" value="{{userChore.user_id}}" class="center-align btn btn-sm btn-danger itemBtn" data-id="{{userChore.id}}">+{{chore.value}}</button>
                </div>
                </div>
                {{/each}}
            </ul>
            </div>
            </div>
        </div>
    {{/each}}
</div>
<script src="/js/getChore.js"></script>
<script src="/js/edit.js"></script>
